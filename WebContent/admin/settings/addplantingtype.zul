<zk>
	<window title="Add Planting Type" border="normal" closable="true"
		apply="org.zkoss.bind.BindComposer"
		viewModel="@id('vm') @init('org.strasa.web.admin.view.model.AddPlantingType')"
		width="35%">


		<grid vflex="1">
			<columns>
				<column label="Type" width="150px" />
				<column label="Content" />
			</columns>
			<rows>
				<row>
					<label value="Name" width="150px" />
					<textbox value='@bind(vm.model.planting)'
						constraint="no empty" width="150px" />
				</row>
				<row>
					<button label="Save" onClick="@command('add')"></button>
					<button label="Cancel"
						onClick="@command('cancel')">
					</button>
				</row>
			</rows>
		</grid>
	</window>
</zk>